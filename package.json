{
	"name": "svelte-dialog-modal",
	"version": "0.0.7",
	"scripts": {
		"dev": "vite dev",
		"build": "bun run format && vite build && bun run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "bun run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write ./src && prettier --write package.json"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"homepage": "https://github.com/SaintPepsi/svelte-dialog-modal#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/SaintPepsi/svelte-dialog-modal.git"
	},
	"bugs": "https://github.com/SaintPepsi/svelte-dialog-modal/issues",
	"author": "Ian Hogers <info@iahogers.com>",
	"peerDependencies": {
		"svelte": "^5.0.0-next.1"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "3.2.5",
		"@sveltejs/kit": "2.7.1",
		"@sveltejs/package": "^2.3.5",
		"@sveltejs/vite-plugin-svelte": "4.0.0",
		"@types/eslint": "^9.6.1",
		"@types/eslint-config-prettier": "^6.11.3",
		"@types/eslint__js": "^8.42.3",
		"eslint": "^9.13.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "2.45.1",
		"globals": "^15.11.0",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.7",
		"publint": "^0.2.11",
		"sass-embedded": "^1.80.3",
		"svelte": "^5.0.0",
		"svelte-check": "4.0.5",
		"typescript": "^5.6.3",
		"typescript-eslint": "^8.10.0",
		"vite": "^5.4.9"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"license": "MIT",
	"dependencies": {
		"classnames": "^2.5.1"
	}
}